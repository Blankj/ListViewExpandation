<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.blankj.listviewexpandation.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnFlexible"
        android:text="Flexible ListView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnScrollHideListView"
        android:text="Scroll Hide" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnChatItem"
        android:text="Chat Item" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnFocus"
        android:text="Focus" />
</LinearLayout>
